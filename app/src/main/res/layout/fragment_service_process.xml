<?xml version="1.0" encoding="utf-8"?>
<androidx.core.view.insets.ProtectionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorSurfaceContainer"
    android:transitionGroup="true"
    tools:context=".ui.serviceprocess.ServiceProcessFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/fragmentServiceProcessNestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:isScrollContainer="true"
        android:overScrollMode="always">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="24dp">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/fragmentServiceProcessProgressIndicator"
                style="@style/Widget.Material3.CircularProgressIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:paddingHorizontal="4dp"
                android:progress="100"
                app:hideAnimationBehavior="outward"
                app:indicatorInset="16dp"
                app:indicatorSize="200dp"
                app:layout_constraintBottom_toTopOf="@+id/fragmentServiceProcessTextViewTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:showAnimationBehavior="inward"
                app:trackThickness="20dp"
                app:waveAmplitude="6dp"
                app:wavelength="60dp"

                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/fragmentServiceProcessTextViewTitle"
                style="@style/Widget.App.H1.Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium.Emphasized"
                app:layout_constraintBottom_toTopOf="@+id/fragmentServiceProcessTextViewSubtitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_max="@dimen/input_field_max_width"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/fragmentServiceProcessTextViewSubtitle"
                style="@style/Widget.App.P"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/fragmentServiceProcessCardView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_max="@dimen/input_field_max_width"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/fragmentServiceProcessCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:strokeWidth="0dp"
                app:layout_constraintBottom_toTopOf="@+id/fragmentServiceProcessLinearLayoutDetailContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_max="@dimen/input_field_max_width">

                <com.mapbox.maps.MapView
                    android:id="@+id/fragmentServiceProcessMapView"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="@android:color/transparent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fragmentServiceProcessButtonNavigation"
                    style="@style/Widget.Material3Expressive.Button.TonalButton"
                    app:icon="@drawable/navigation_24px"
                    android:text="@string/open_maps"
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"/>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/fragmentServiceProcessLinearLayoutDetailContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_large_rectangle_background"
                android:divider="@drawable/divider_gap_8"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp"
                android:showDividers="middle"
                app:layout_constraintBottom_toTopOf="@id/fragmentServiceProcessLinearLayoutOrderItemContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_max="@dimen/input_field_max_width"
                app:layout_goneMarginBottom="96dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_gap_8"
                    android:gravity="fill"
                    android:showDividers="middle">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="@dimen/information_title_list_text_view_max_width"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:ellipsize="marquee"
                        android:text="@string/order_id"
                        android:textAlignment="textStart"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?colorOnSurface"
                        tools:targetApi="26" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/fragmentServiceProcessOrderId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:autoSizeTextType="uniform"
                        android:textAlignment="textEnd"
                        android:textAppearance="?attr/textAppearanceBodyLargeEmphasized"
                        android:textColor="?colorOnSurface"
                        tools:targetApi="26" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_gap_8"
                    android:gravity="fill"
                    android:showDividers="middle">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="@dimen/information_title_list_text_view_max_width"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:ellipsize="marquee"
                        android:text="@string/location"
                        android:textAlignment="textStart"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?colorOnSurface"
                        tools:targetApi="26" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/fragmentServiceProcessLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:autoSizeTextType="uniform"
                        android:textAlignment="textEnd"
                        android:textAppearance="?attr/textAppearanceBodyLargeEmphasized"
                        android:textColor="?colorOnSurface"
                        tools:targetApi="26" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_gap_8"
                    android:gravity="fill"
                    android:showDividers="middle">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="@dimen/information_title_list_text_view_max_width"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:ellipsize="marquee"
                        android:text="@string/address"
                        android:textAlignment="textStart"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?colorOnSurface"
                        tools:targetApi="26" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/fragmentServiceProcessAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:autoSizeTextType="uniform"
                        android:textAlignment="textEnd"
                        android:textAppearance="?attr/textAppearanceBodyLargeEmphasized"
                        android:textColor="?colorOnSurface"
                        tools:targetApi="26" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_gap_8"
                    android:gravity="fill"
                    android:showDividers="middle">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="@dimen/information_title_list_text_view_max_width"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:ellipsize="marquee"
                        android:text="@string/partner"
                        android:textAlignment="textStart"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?colorOnSurface"
                        tools:targetApi="26" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/fragmentServiceProcessPartner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:autoSizeTextType="uniform"
                        android:textAlignment="textEnd"
                        android:textAppearance="?attr/textAppearanceBodyLargeEmphasized"
                        android:textColor="?colorOnSurface"
                        tools:targetApi="26" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_gap_8"
                    android:gravity="fill"
                    android:showDividers="middle">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="@dimen/information_title_list_text_view_max_width"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:ellipsize="marquee"
                        android:text="@string/vehicle"
                        android:textAlignment="textStart"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?colorOnSurface"
                        tools:targetApi="26" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/fragmentServiceProcessVehicle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:autoSizeTextType="uniform"
                        android:textAlignment="textEnd"
                        android:textAppearance="?attr/textAppearanceBodyLargeEmphasized"
                        android:textColor="?colorOnSurface"
                        tools:targetApi="26" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_gap_8"
                    android:gravity="fill"
                    android:showDividers="middle">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="@dimen/information_title_list_text_view_max_width"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:ellipsize="marquee"
                        android:text="@string/issue"
                        android:textAlignment="textStart"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?colorOnSurface"
                        tools:targetApi="26" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/fragmentServiceProcessIssue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:autoSizeTextType="uniform"
                        android:textAlignment="textEnd"
                        android:textAppearance="?attr/textAppearanceBodyLargeEmphasized"
                        android:textColor="?colorOnSurface"
                        tools:targetApi="26" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_gap_8"
                    android:gravity="fill"
                    android:showDividers="middle">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="@dimen/information_title_list_text_view_max_width"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:ellipsize="marquee"
                        android:text="@string/description"
                        android:textAlignment="textStart"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?colorOnSurface"
                        tools:targetApi="26" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/fragmentServiceProcessIssueDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:autoSizeTextType="uniform"
                        android:textAlignment="textEnd"
                        android:textAppearance="?attr/textAppearanceBodyLargeEmphasized"
                        android:textColor="?colorOnSurface"
                        tools:targetApi="26" />
                </LinearLayout>

            </LinearLayout>

            <!-- OrderItem detail -->
            <LinearLayout
                android:id="@+id/fragmentServiceProcessLinearLayoutOrderItemContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="96dp"
                android:background="@drawable/rounded_large_rectangle_background"
                android:divider="@drawable/divider_gap_8"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp"
                android:showDividers="middle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_max="@dimen/input_field_max_width">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/orderItem"
                        android:textAppearance="?attr/textAppearanceBodyLargeEmphasized"
                        android:textColor="?colorOnSurface" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/fragmentServiceProcessButtonEditOrderItem"
                        style="@style/Widget.Material3Expressive.Button.TonalButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fragment_service_process_recycler_view_order_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_gap_8"
                    android:gravity="fill"
                    android:showDividers="middle">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/plus_jakarta_sans_variable"
                        android:text="@string/total"
                        android:textAlignment="textStart"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        android:textColor="?colorOnSurface"
                        tools:targetApi="26" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/fragment_service_process_order_items_total_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="3"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/plus_jakarta_sans_variable"
                        android:textAlignment="textEnd"
                        android:textAppearance="?attr/textAppearanceTitleLargeEmphasized"
                        android:textColor="?colorOnSurface"
                        android:textStyle="bold"
                        tools:targetApi="26" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_gap_16"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:showDividers="middle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_max="@dimen/input_field_max_width">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fragmentServiceProcessButtonCancel"
                    style="@style/Widget.Material3Expressive.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="?colorError"
                    android:foregroundTint="?colorOnError"
                    android:maxWidth="60dp"
                    android:text="@string/cancel"
                    app:icon="@drawable/close_24px"
                    app:iconGravity="textStart" />

                <com.ncorti.slidetoact.SlideToActView
                    android:id="@+id/fragmentServiceProcessActButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    app:outer_color="?colorPrimary"
                    app:text="Accept"
                    app:text_appearance="@style/Widget.App.H5.Bold"
                    app:text_color="?colorOnPrimary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fragmentServiceProcessButtonComplete"
                    style="@style/Widget.Material3Expressive.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/done"
                    android:visibility="gone"
                    app:icon="@drawable/check_24px"
                    app:iconGravity="textStart" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.core.view.insets.ProtectionLayout>