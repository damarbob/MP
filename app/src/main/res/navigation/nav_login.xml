<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_login"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="id.monpres.app.ui.auth.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="id.monpres.app.ui.auth.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/emailVerificationFragment"
        android:name="id.monpres.app.ui.auth.emailverification.EmailVerificationFragment"
        tools:layout="@layout/fragment_email_verification"/>
    <fragment
        android:id="@+id/adminVerificationFragment"
        android:name="id.monpres.app.ui.auth.adminverification.AdminVerificationFragment"
        tools:layout="@layout/fragment_admin_verification"/>
    <action
        android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment"
        app:popUpTo="@id/nav_login"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_global_emailVerificationFragment"
        app:destination="@id/emailVerificationFragment"
        app:popUpTo="@id/nav_login"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_global_adminVerificationFragment"
        app:destination="@id/adminVerificationFragment"
        app:popUpTo="@id/nav_login"
        app:popUpToInclusive="true" />
</navigation>